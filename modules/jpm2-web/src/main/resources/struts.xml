<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd" [
    <!ENTITY custom SYSTEM "struts-custom.xml">
]>

<struts>
    <constant name="struts.devMode" value="true" />
    <constant name="struts.serve.static" value="false" />
 
    <package name="default" namespace="/" extends="struts-default">
        <global-results>
            <result name="login" type="redirectAction">login</result>
            <result name="error" >WEB-INF/jsp/jpm-error.jsp</result>
        </global-results>
        <action name="index" class="jpaoletti.jpm2.controller.Index" >
            <result name="success">WEB-INF/jsp/index.jsp</result>
        </action>
        <action name="login" class="jpaoletti.jpm2.controller.Login" >
            <result name="success">WEB-INF/jsp/login.jsp</result>
        </action>
        <action name="jpmStatus" class="jpaoletti.jpm2.controller.BaseAction" >
            <result name="success">WEB-INF/jsp/jpmstatus.jsp</result>
        </action>

        <action name="list" class="jpaoletti.jpm2.controller.ListAction" >
            <result name="success">WEB-INF/jsp/jpm-list.jsp</result>
        </action>
        <action name="add" class="jpaoletti.jpm2.controller.AddAction" >
            <result name="success">WEB-INF/jsp/jpm-edit.jsp</result>
            <result name="commit_error">WEB-INF/jsp/jpm-edit.jsp</result>
            <result name="finish" type="redirectAction">
                <param name="actionName">show</param>
                <param name="entityId">${entityId}</param>
                <param name="instanceId">${instanceId}</param>
            </result>
        </action>
        <action name="edit" class="jpaoletti.jpm2.controller.EditAction" >
            <result name="success">WEB-INF/jsp/jpm-edit.jsp</result>
            <result name="commit_error">WEB-INF/jsp/jpm-edit.jsp</result>
            <result name="finish" type="redirectAction">
                <param name="actionName">show</param>
                <param name="entityId">${entityId}</param>
                <param name="instanceId">${instanceId}</param>
            </result>
        </action>
        <action name="show" class="jpaoletti.jpm2.controller.OperationAction" >
            <result name="success">WEB-INF/jsp/jpm-show.jsp</result>
        </action>
        <action name="delete" class="jpaoletti.jpm2.controller.DeleteAction" >
            <result name="finish" type="redirectAction">
                <param name="actionName">list</param>
                <param name="entityId">${entityId}</param>
            </result>
        </action>
        <action name="addSearch" class="jpaoletti.jpm2.controller.AddSearch">
            <result name="success" type="redirectAction">
                <param name="actionName">list</param>
                <param name="entityId">${entityId}</param>
            </result>
        </action>
        <action name="removeSearch" class="jpaoletti.jpm2.controller.RemoveSearch">
            <result name="success" type="redirectAction">
                <param name="actionName">list</param>
                <param name="entityId">${entityId}</param>
            </result>
        </action>
    </package>
    
    &custom;
</struts>
